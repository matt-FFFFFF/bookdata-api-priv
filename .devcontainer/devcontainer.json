{
    "name": "Golang dev container",
    "dockerFile": "Dockerfile.devcontainer",
    "mounts": ["source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"],
    "extensions": [
        "ms-vscode.go",
        "ms-azuretools.vscode-docker"
    ],
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined",
        "--security-opt",
        "apparmor=unconfined"
    ]
}